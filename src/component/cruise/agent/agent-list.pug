ul.agent-list
    li(*for="item of testList")
        .agent-list-item
            img([src]="item.icon")
            .detail
                .detail-header
                    table
                        td
                            i.icon-desktop
                            span.detail-title {{ item.title }}
                        td
                            .agent-status {{ item.status }}
                        td
                            i.icon-info {{ item.ip }}
                        td
                            i.icon-folder {{ item.folderName }}
                .detail-bottom
                    button.add-button(click="addTag(item)")
                        i.icon-plus
                    button.deny-button(click="deny(item)")
                        i.icon-deny
                        span Deny
                    

