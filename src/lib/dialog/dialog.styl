@import '../../common/css/variables.styl';

.dialog {
    .dialog-content {
        width: 400px;
        height: 120px;
        background: white;
        position: absolute;
        border: 2px solid $color-blue;
    }

    .triangle {
        position: absolute;
        left: 20px;
        top: -22px;
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 10px 20px 10px;
        border-color: transparent transparent $color-blue transparent;

        &.inner {
            top: -18px;
            border-color: transparent transparent white transparent;
        }
    }
}